@model Lab.Capas.MVC.Models.ShipperView
@{
    ViewBag.Title = "Update";
}

<h2>Update</h2>

@using (Html.BeginForm("Update", "Shipper", FormMethod.Post))
{
    @Html.HiddenFor(s => s.ShipperID)
    <div>Company Name: @Html.TextBoxFor(s => s.CompanyName, new { @class = "form-control", placeholder = "Company Name", required = "required" })</div>
    <div>Phone: @Html.TextBoxFor(s => s.Phone, new { @class = "form-control", placeholder = "Phone Number", required = "required" })</div>
    <input type="submit" class="btn btn-success btn-lg" value="Save Changes" />
}